@model EventsPlus.Models.Attendee

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<h4>Register To This Event:</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control register-input" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control register-input" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control register-input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="EventID" class="form-control" value="@ViewData["EventID"]" />
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" id="registerBtn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Events" asp-action="Schedule">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}