@model EventsPlus.Models.Attendee

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<h4>Register To This Event:</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.EventID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.EventID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.StartTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.StartTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.Location)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Location)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.Duration)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Duration)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.EventType.Type)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.EventType.Type)
            </dd>
        </dl>
    </div>
    <div class="col-md-6">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control register-input" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control register-input" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control register-input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="EventID" class="form-control" value="@Model.EventID" />
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Events" asp-action="Schedule">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}